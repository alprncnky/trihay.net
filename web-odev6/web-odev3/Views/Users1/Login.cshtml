@model web_odev3.Models.Users1
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_LayoutPage1.cshtml";
    ViewData["PageId"] = "Login";
}

    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()

        <div class="custom-login-panel">
            <div class="container">
                <div class="row">
                    <div class="col-md-offset-3 col-md-6">
                        <img class="profile-img" src="~/images/userlogo.svg"
                             alt="">
                        <div class="form-login">
                            <h4 style="color:white;">Giriş ve Kayıt Ekranı</h4>
                            <div class="form-group">
                                @Html.ValidationSummary(false)
                                @Html.EditorFor(m => m.userEmail, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                                @Html.ValidationMessageFor(m => m.userEmail, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.EditorFor(m => m.userPassword, new { htmlAttributes = new { @class = "form-control", type="password", placeholder = "Password" } })
                                @Html.ValidationMessageFor(m => m.userPassword, "", new { @class = "text-danger" })
                            </div>
                            <div class="wrapper">
                                <div class="form-group">
                                    <span class="group-btn">
                                        <input style="width:40%;" type="submit" value="Giriş" class="submit btn btn-primary">
                                        <input style="width:40%;" type="submit" value="Kayıt Ol" class="submit btn btn-primary">
                                    </span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }

